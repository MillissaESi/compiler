%{
#include <ctype.h>
#include <stdio.h>
#include <stdlib.h>
int yyerror();

%}

%union {
	float fval ;
}
%error-verbose
%token <fval> nombre
%type <fval> Ligne
%type <fval> Terme 
%type <fval> Facteur
%type <fval> Expr
%type <fval> Fin


%%
Ligne : Expr '\n' { printf(" r√©sultat: %f \n", $1); }
;
Expr : Expr '+' Terme {$$ = $1 + $3; }
| Expr '-' Terme {$$ = $1 - $3; }
| Terme
;
Terme : Terme '*' Facteur { $$ = $1 * $3; }
| Terme '/' Facteur { $$ = $1 / $3; }
| Facteur
;
Facteur : '-' Facteur  {$$=(-1) * $2;}
| Fin
;
Fin : '(' Expr ')' { $$ = $2; } 
| nombre 
;
%%


int main() {
	yyparse();}

int yyerror(const char * s) {
    printf("%s\n",s);
}

